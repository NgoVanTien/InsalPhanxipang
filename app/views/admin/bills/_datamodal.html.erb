<div class="modal-content">
  <div class="modal-header">
    <button class="btn-edit" onclick="enableEdit()">
      <i class="fa fa-edit icon-edit"></i>
    </button>
    <div class="box-body no-padding info-bill">
      <div class="row row-info">
        <div class="col-xs-6">
          <strong><%= t "admin.bills.name" %>:</strong>
          <input class="show-data show-data-edit" type="text" value=<%= (@bill != nil)? @bill.user.name : "" %> disabled="disabled"/>
        </div>
        <div class="col-xs-6">
          <strong><%= t "admin.bills.start_renting" %>:</strong>
          <input class='date-picker' type="text" data-provide='datepicker' value=<%= (@bill != nil)? @bill.start_renting : "" %> disabled="disabled"/>
        </div>
        <div class="col-xs-6">
          <strong><%= t "admin.bills.phone_number" %>:</strong>
          <input class="show-data" type="text" value=<%= (@bill != nil)? @bill.user.phone : "" %> disabled="disabled"/>
        </div>
        <div class="col-xs-6">
          <strong><%= t "admin.bills.end_renting" %>:</strong>
          <input class='date-picker' type="text" data-provide='datepicker' value=<%= (@bill != nil)? @bill.end_renting : "" %> disabled="disabled"/>
        </div>
        <div class="col-xs-6">
          <strong><%= t "admin.bills.personal_card" %>:</strong>
          <input class="show-data" type="text" value=<%= (@bill != nil)? @bill.user.personal_card : "" %> disabled="disabled"/>
        </div>
        <div class="col-xs-6">
          <strong><%= t "admin.bills.extend_renting" %>:</strong>
          <input class="show-data" type="text" disabled="disabled"/>
        </div>
      </div>
    </div>
    <div class="modal-body">
      <div class="box-body table-responsive no-padding">
        <table class="table table-bill table-hover">
          <thead class="table-head">
            <tr class="row">
              <th class="col-md-2"><%= t "admin.bills.id" %></th>
              <th class="col-md-2"><%= t "admin.products.product_name" %></th>
              <th class="col-md-2"><%= t "admin.bills.quantity" %></th>
              <th class="col-md-2"><%= t "admin.products.price" %></th>
              <th class="col-md-2"><%= t "admin.bills.total" %></th>
              <th class="col-md-2"><%= t "admin.bills.remove" %></th>
            </tr>
          </thead>
          <tbody class="table-body">
            <% if(@productid != nil) %>
              <% @productid.each_with_index do |item, index| %>
                <tr class="row">
                  <td class="col-md-2"><%= index + 1 %></td>
                  <td class="col-md-2"><%= @productname[index] %></td>
                  <td class="col-md-2"><%= @productnumber[item] %></td>
                  <td class="col-md-2"><%= @productprice[index].to_f %></td>
                  <td class="col-md-2"><%= @productnumber[item].to_f*@productprice[index].to_f %></td>
                  <td class="col-md-2">
                    <a class="remove-bill"><%= t "admin.bills.remove" %></a>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row total-bill">
        <div class="col-xs-4">
          <strong><%= t "admin.bills.total" %>:
            <%= (@bill != nil)? @bill.total : "" %>
          </strong><br>
        </div>
        <div class="col-xs-4">
          <strong><%= t "admin.bills.extend" %>:</strong><br>
        </div>
        <div class="col-xs-4">
          <strong><%= t "admin.bills.total_money" %>:</strong>
        </div>
      </div>
    </div>
    <div class="modal-footer footer-bill">
      <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t "admin.bills.btn_pay" %></button>
      <button type="button" class="btn btn-danger btn-cancel" onclick="disableEdit()" data-dismiss="modal"><%= t "admin.bills.btn_cancel" %></button>
    </div>
  </div>
</div>
