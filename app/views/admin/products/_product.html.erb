<% @products.each_with_index  do |item, index| %>
  <% if (index == 0 || index % 4 == 0) %>
    <div class="row row-item">
    <% end %>
    <div id="product_<%= @product.id %>" class="col-md-3 col-sm-6 col-xs-12 item">
      <div class="image" style="background-image: url(<%= item.image %>);">
        <i class="fa fa-times-circle fa-2x delete bt-delete" id-button="<%= item.id %>"></i>
          <%= link_to  edit_admin_product_path(item), class: "btn-add-product edit", remote: true do %>
            <i class="fa fa-edit fa-2x "></i>
          <%end%>
      </div>
      <div class="title">
        <a class="link" href="#">
          <p id-name="<%= item.id %>"><%= item.name %></p>
        </a>
      </div>
    </div>
    <% if ((index + 1) % 4 == 0 || index == (products.size - 1)) %>
    </div>
  <% end %>
<% end %>
<div class="row paginate">
  <%= paginate products, theme: "twitter-bootstrap-4" %>
</div>
<script type="text/javascript">
  $(function () {
    var notice = "<%= !flash[:notice].nil? ? flash[:notice].first : '' %>"
    var type = "<%= !flash[:notice].nil? ? flash[:notice].last : '' %>"
    $.notify(notice, type);
    <% flash[:notice] = "" %>
  })
</script>
