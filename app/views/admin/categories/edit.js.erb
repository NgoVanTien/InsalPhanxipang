// Add the dialog title
$('#modal h4').html('<i class="glyphicon glyphicon-pencil"></i><%= t "admin.categories.edit_category"%>');

// Render the edit form
$('.modal-body').html('<%= j render("form") %>');

// Show the dynamic dialog
$('#modal').modal("show");
  $(".edit_category").validate({
    rules: {
      name: {
        required: true,
        minlength: 2
              },
      image: {
        required: false,
              }
    },
    messages: {
      name: {
        required: "Vui lòng nhập tên Danh mục",
        minlength: "Ngắn quá!!"
              },
    }
  });
