<div class="row">
  <div class="col-md-5 col-md-offset-3 "
    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title">Tạo Loại Mới</h3>
      </div>
    <!-- /.box-header -->
    <!-- form start -->
      <%= form_for [:admin, @category], url: {action:"create"},html: {class:"form-horizontal"} do |f| %>
        <div class="box-body">
          <div class="form-group">
            <%= f.label :Tên, for:"inputEmail3", class:"col-sm-2 control-label" %>

            <div class="col-sm-10">
              <%= f.text_field :name, class:"form-control", id:"inputEmail3", placeholder:"Name" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :Ảnh, for:"inputPassword3", class:"col-sm-2 control-label" %>

            <div class="col-sm-10">
              <%= f.file_field :image, class:"form-control", id:"inputPassword3", placeholder:"Image" %>
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <button type="submit" class="btn btn-info pull-right">Save</button>
        </div>
        <!-- /.box-footer -->
      <% end %>
    </div>
  </div>
</div>
