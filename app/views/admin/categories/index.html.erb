<div class="row docs-premium-template">
  <% @categories.each do |c| %>
    <div class="col-sm-12 col-md-4">
      <div class="box box-solid">
        <div class="box-body" style= "height: 450px;">
          <div class = "btn-group categories-controller">
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#editCategory<%=c.id%>"><i class="fa fa-edit"></i></button>
              <%= render  "edit", c:c %>
            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#deleteCategory"><i class="fa fa-trash"></i></button>
          </div>
          <div class="media">
            <div class="media-left">
              <a href="#" class="ad-click-event">
                <img src="<%= c.picture %>" alt="Material Dashboard Pro" class="media-object">
              </a>
            </div>
          </div>
          <h4 class = "category-title">
            <%= c.name %>
          </h4>
        </div>
      </div>
    </div>
  <% end %>
    <div class="col-sm-12 col-md-4 add-category__btn" style= "height: 450px;">
      <div class="container">
        <!-- Trigger the modal with a button -->
        <button type="button" class="btn btn-info btn-lg btn__add" data-toggle="modal" data-target="#newCategory"><i class="fa fa-plus"></i> </button>
        <%= render  "new", category: @new_category %>
      </div>
    </div>
</div>
<div class="row paginate">
  <%= paginate @categories, theme: 'twitter-bootstrap-4' %>
</div>
