<div class="docs-premium-template" id="categories">
  <button type="button" class="btn btn-default btn-add-category" data-target="#modal-default">
    <%= link_to "Thêm danh mục", new_admin_category_path, remote: true, class: "" %>
  </button>
</div>
<%= render @categories %>
<%= render "modal" %>
<div class="box-footer clearfix paginate">
  <p>
    <%= paginate @categories, theme: "twitter-bootstrap-4" %>
  </p>
</div>
<script type = "text/javascript">
  var loadFile = function(event) {
    var output = document.getElementById('output');
    output.src = URL.createObjectURL(event.target.files[0]);
  };
  $(function() {
    var notice = "<%= !flash[:notice].nil? ? flash[:notice].first : ''%>"
    var type = "<%= !flash[:notice].nil? ? flash[:notice].last : ''%>"
    $.notify(notice, type);
  })
</script>
