<header class="main-header">
  <a href="#" class="logo">
    <span class="logo-mini"><b>IN</b>S</span>
    <span class="logo-lg"><b>IN</b>SAL</span>
  </a>
  <nav class="navbar navbar-static-top">
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    <div class="input-group input-group--custom">
      <div class="input-group-btn">
        <button type="button" class="btn btn-danger"><%= t "layouts.action" %></button>
      </div>
      <input type="text" class="form-control">
    </div>
    <div class="navbar-custom-menu locate-logout">
      <ul class="nav navbar-nav">
        <li class="dropdown notifications-menu">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <i class="fa fa-cart-plus cart-shop-icon"></i>
             <span class="label label-warning">10</span>
           </a>
           <ul class="dropdown-menu">
             <li class="header"><%= t "layouts.notice_item" %></li>
           </ul>
        </li>
        <li class="dropdown messages-menu">
          <%= link_to admin_admin_path(current_user), method: :delete, class:"dropdown-toggle" do %>
            <i class="fa fa-sign-out"></i>
            <span><%= t "layouts.log_out" %></span>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
</header>
